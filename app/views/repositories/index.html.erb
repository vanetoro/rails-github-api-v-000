<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories here! -->
<h2><%= @repoList[0]['owner']['login'] %></h2>
<ul>
  <% @repoList.each do |repo| %>
  <li><%= repo['name'] %></li>
  <% end %>
</ul>


  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= hidden_field_tag :user, @repoList[0]['owner']['login']  %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
